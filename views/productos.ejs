<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Productos</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/styles.css"> <!-- Enlace a tu archivo CSS personalizado -->
    <style>
        /* Estilos personalizados */
        .btn-link {
            color: #007bff;
            text-decoration: none;
            background: none;
            border: none;
            padding: 0;
            font: inherit;
            cursor: pointer;
        }

        .btn-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="/menu"><i class="fas fa-store"></i> Gestión de Productos</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/menu"><i class="fas fa-home"></i> Menú</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/productos"><i class="fas fa-box-open"></i> Productos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/categorias"><i class="fas fa-tags"></i> Categorías</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <section id="form-section" class="mb-4">
                    <h2><%= product ? 'Editar Producto' : 'Agregar Producto' %></h2>
                    <form id="product-form" action="/productos" method="POST">
                        <input type="hidden" name="id" value="<%= product ? product.id : '' %>">
                        <div class="mb-3">
                            <label for="codigo" class="form-label">Código:</label>
                            <input type="text" class="form-control" name="codigo" id="codigo" required value="<%= product ? product.codigo : '' %>">
                        </div>
                        <div class="mb-3">
                            <label for="producto" class="form-label">Producto:</label>
                            <input type="text" class="form-control" name="producto" id="producto" required value="<%= product ? product.producto : '' %>">
                        </div>
                        <div class="mb-3">
                            <label for="categoria_id" class="form-label">Categoría:</label>
                            <input type="text" class="form-control" name="categoria_id" id="categoria_id" required value="<%= product ? product.categoria_id : '' %>">
                        </div>
                        <div class="mb-3">
                            <label for="existencia_actual" class="form-label">Existencia:</label>
                            <input type="number" class="form-control" name="existencia_actual" id="existencia_actual" required value="<%= product ? product.existencia_actual : '' %>">
                        </div>
                        <div class="mb-3">
                            <label for="precio" class="form-label">Precio:</label>
                            <input type="number" class="form-control" name="precio" id="precio" required step="0.01" value="<%= product ? product.precio : '' %>">
                        </div>
                        <button type="submit" class="btn btn-primary"><%= product ? 'Actualizar' : 'Agregar' %></button>
                    </form>
                </section>
            </div>

            <div class="col-md-6">
                <section id="product-list">
                    <h2>Lista de Productos</h2>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Código</th>
                                <th>Producto</th>
                                <th>Categoría</th>
                                <th>Existencia</th>
                                <th>Precio</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% productos.forEach(product => { %>
                                <tr>
                                    <td><%= product.id %></td>
                                    <td><%= product.codigo %></td>
                                    <td><%= product.producto %></td>
                                    <td><%= product.categoria_id %></td>
                                    <td><%= product.existencia_actual %></td>
                                    <td>$<%= product.precio.toFixed(2) %></td>
                                    <td>
                                        <a href="/productos/<%= product.id %>/edit" class="btn btn-sm btn-warning">Editar</a>
                                        <form action="/productos/<%= product.id %>" method="POST" style="display:inline;">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button type="submit" class="btn btn-sm btn-danger">Eliminar</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                            <% if (productos.length === 0) { %>
                                <tr>
                                    <td colspan="7">No hay productos disponibles.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </section>
            </div>
        </div>
    </main>

    <footer class="footer bg-dark text-light text-center py-3 mt-4">
        &copy; 2025 Tu Empresa. Todos los derechos reservados.
    </footer>

    <!-- Bootstrap JS Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
